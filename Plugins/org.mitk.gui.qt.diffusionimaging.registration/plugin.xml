<?xml version="1.0" encoding="UTF-8"?>
<?BlueBerry version="0.1"?>
<plugin>

  <extension point="org.blueberry.ui.views">

    <view id="org.mitk.views.diffusionregistrationview"
    name="Head-Motion Correction"
    category="Registration"
    class="QmitkDiffusionRegistrationView"
    icon="resources/diffusionregistration.png">
    <keywordReference id="org.mitk.views.diffusionregistrationview.Keyword"/>
    </view>

    <view id="org.mitk.views.simplerigidregistrationview"
    name="Rigid Registration"
    category="Registration"
    class="QmitkSimpleRigidRegistrationView"
    icon="resources/diffusionregistration.png">
    <keywordReference id="org.mitk.views.simplerigidregistrationview.Keyword"/>
    </view>

  </extension>

  <extension point="org.blueberry.ui.perspectives">

    <perspective id="org.mitk.perspectives.dwiregistration"
    name="Registration"
    class="QmitkDwiRegistrationPerspective"
    icon="resources/diffusionregistration.png">
    <description>This perspective contains views for rigid image registration and head motion correction.</description>
    <keywordReference id="org.mitk.perspectives.dwiregistration.Keyword"/>
    </perspective>

  </extension>

  <extension point="org.blueberry.ui.keywords">

  <keyword label="registration" id="org.mitk.views.simplerigidregistrationview.Keyword"/>
  <keyword label="registration" id="org.mitk.views.diffusionregistrationview.Keyword"/>
  <keyword label="motion" id="org.mitk.views.simplerigidregistrationview.Keyword"/>
  <keyword label="motion" id="org.mitk.views.diffusionregistrationview.Keyword"/>
  <keyword label="head" id="org.mitk.views.simplerigidregistrationview.Keyword"/>
  <keyword label="head" id="org.mitk.views.diffusionregistrationview.Keyword"/>
  <keyword label="align" id="org.mitk.views.simplerigidregistrationview.Keyword"/>
  <keyword label="align" id="org.mitk.views.diffusionregistrationview.Keyword"/>
  <keyword label="register" id="org.mitk.views.simplerigidregistrationview.Keyword"/>
  <keyword label="register" id="org.mitk.views.diffusionregistrationview.Keyword"/>

  </extension>

</plugin>
